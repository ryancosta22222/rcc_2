<?xml version="1.0" encoding="UTF-8"?>

<!-- Import necessary JavaFX components -->
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<!-- Root layout container: VBox (Vertical Box) -->
<VBox fx:controller="com.example.universitymanagementsystem.LoginController"
      spacing="10" alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml">

   <!-- Text field for entering the username -->
   <!-- fx:id="usernameField" allows access from LoginController -->
   <TextField fx:id="usernameField" promptText="Enter Username" />

   <!-- Password field for entering the password -->
   <!-- Uses a PasswordField to hide input characters -->
   <PasswordField fx:id="passwordField" promptText="Enter Password" />

   <!-- Login button -->
   <!-- onAction="#handleLogin" calls the handleLogin method in LoginController when clicked -->
   <Button fx:id="loginButton" text="Login" onAction="#handleLogin" />

</VBox>
