<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:id="mainLayout"
            fx:controller="com.example.universitymanagementsystem.UserMainController">

    <!-- Top Banner (University Branding) -->
    <top>
        <HBox style="-fx-background-color: #BA0C2F;
                     -fx-padding: 15;
                     -fx-alignment: CENTER_LEFT;">
            <Label text="University of Guelph â€” Student Portal"
                   style="-fx-text-fill: white;
                          -fx-font-size: 20px;
                          -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Left Sidebar Navigation -->
    <left>
        <VBox spacing="10"
              style="-fx-background-color: #000000;
                     -fx-padding: 15;
                     -fx-alignment: TOP_CENTER;">

            <!-- Dashboard -->
            <Button fx:id="dashboardBtn"
                    text="Dashboard"
                    onAction="#loadDashboard"
                    style="-fx-pref-width: 160;
                           -fx-background-color: #BA0C2F;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;" />

            <!-- View Courses -->
            <Button fx:id="viewCoursesBtn"
                    text="View Courses"
                    onAction="#openCourseManagement"
                    style="-fx-pref-width: 160;
                           -fx-background-color: #BA0C2F;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;" />

            <!-- Events -->
            <Button fx:id="eventMgmtBtn"
                    text="Events"
                    onAction="#loadEventManagement"
                    style="-fx-pref-width: 160;
                           -fx-background-color: #BA0C2F;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;" />

            <!-- Profile -->
            <Button fx:id="profileBtn"
                    text="My Profile"
                    onAction="#loadProfile"
                    style="-fx-pref-width: 160;
                           -fx-background-color: #BA0C2F;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;" />

            <!-- Faculty Profiles -->
            <Button fx:id="facultyBtn"
                    text="Faculty Profiles"
                    onAction="#loadFacultyProfiles"
                    style="-fx-pref-width: 160;
                           -fx-background-color: #BA0C2F;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;" />

            <!-- Subjects -->
            <Button fx:id="subjectsBtn"
                    text="Subjects"
                    onAction="#loadSubjects"
                    style="-fx-pref-width: 160;
                           -fx-background-color: #BA0C2F;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;" />

            <!-- Student Home -->
            <Button fx:id="studentBtn"
                    text="Student Home"
                    onAction="#loadStudentHome"
                    style="-fx-pref-width: 160;
                           -fx-background-color: #BA0C2F;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;" />

            <!-- Logout -->
            <Button fx:id="logoutBtn"
                    text="Logout"
                    onAction="#handleLogout"
                    style="-fx-pref-width: 160;
                           -fx-background-color: #BA0C2F;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;" />
        </VBox>
    </left>

    <!-- Center Area (dynamic content) -->
    <center>
        <!-- The center area is where your views will be loaded dynamically. -->
    </center>

</BorderPane>

