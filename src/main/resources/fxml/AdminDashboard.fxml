<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.universitymanagementsystem.UserDashboardController"
      spacing="20" alignment="CENTER"
      style="-fx-background-color: #F5F5F5; -fx-padding: 20;">

    <!-- Top Banner -->
    <HBox style="-fx-background-color: #BA0C2F;
                 -fx-padding: 15;
                 -fx-alignment: CENTER;">
        <Label text="Admin Dashboard"
               style="-fx-font-size: 24px;
                      -fx-text-fill: white;
                      -fx-font-weight: bold;" />
    </HBox>

    <!-- Progress Section -->
    <VBox alignment="CENTER" spacing="5">
        <Label text="Progress:"
               style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <Label fx:id="progressLabel"
               text="Loading progress..."
               style="-fx-font-size: 14px;" />
    </VBox>

    <!-- Upcoming Courses Section -->
    <Label text="Upcoming Courses:"
           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 0 0 0;" />
    <TableView fx:id="coursesTableView"
               style="-fx-pref-width: 600;">
        <columns>
            <TableColumn fx:id="courseNameColumn"
                         text="Course Name" />
            <TableColumn fx:id="courseTimeColumn"
                         text="Lecture Time" />
            <TableColumn fx:id="courseCapacityColumn"
                         text="Students Enrolled" />
        </columns>
    </TableView>

    <!-- Registered Events Section -->
    <Label text="Registered Events:"
           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 0 0 0;" />
    <TableView fx:id="eventsTableView"
               style="-fx-pref-width: 600;">
        <columns>
            <TableColumn fx:id="eventNameColumn"
                         text="Event Name" />
            <TableColumn fx:id="eventTimeColumn"
                         text="Date Time" />
            <TableColumn fx:id="eventCapacityColumn"
                         text="Registered Students" />
        </columns>
    </TableView>

    <!-- Navigation Buttons -->
    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
        <Button text="View Courses" onAction="#openCourseManagement"
                style="-fx-background-color: #BA0C2F;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;" />
        <Button text="View Events" onAction="#openEventManagement"
                style="-fx-background-color: #BA0C2F;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;" />
        <Button text="View Subjects" onAction="#openSubjects"
                style="-fx-background-color: #BA0C2F;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;" />
    </HBox>

    <!-- Bottom Footer -->
    <HBox style="-fx-background-color: #000000;
                 -fx-padding: 8;
                 -fx-alignment: CENTER;">
        <Label text="Â© 2025 University of Guelph"
               style="-fx-text-fill: #FBB900;
                      -fx-font-size: 12px;" />
    </HBox>

</VBox>

