<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.universitymanagementsystem.AdminMainController"
            fx:id="mainLayout">

    <!-- Top area: University title banner -->
    <top>
        <HBox style="-fx-background-color: #BA0C2F; -fx-padding: 15; -fx-alignment: CENTER_LEFT;">
            <Label text="University of Guelph Management System"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Left-side navigation menu -->
    <left>
        <VBox spacing="12"
              style="-fx-background-color: #000000; -fx-padding: 15; -fx-alignment: TOP_CENTER;">

            <Label text="Admin Menu"
                   style="-fx-text-fill: #FBB900; -fx-font-size: 18px; -fx-font-weight: bold;" />

            <Button fx:id="dashboardBtn"
                    text="Dashboard"
                    onAction="#loadDashboard"
                    style="-fx-background-color: #BA0C2F;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-pref-width: 160;" />

            <Button fx:id="subjectMgmtBtn"
                    text="Subjects"
                    onAction="#loadSubjectManagement"
                    style="-fx-background-color: #BA0C2F;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-pref-width: 160;" />

            <Button fx:id="courseMgmtBtn"
                    text="Courses"
                    onAction="#loadCourseManagement"
                    style="-fx-background-color: #BA0C2F;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-pref-width: 160;" />

            <Button fx:id="studentMgmtBtn"
                    text="Students"
                    onAction="#loadStudentManagement"
                    style="-fx-background-color: #BA0C2F;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-pref-width: 160;" />

            <Button fx:id="eventMgmtBtn"
                    text="Events"
                    onAction="#loadEventManagement"
                    style="-fx-background-color: #BA0C2F;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-pref-width: 160;" />

            <Button fx:id="facultyMgmtBtn"
                    text="Faculty Management"
                    onAction="#loadFacultyManagement"
                    style="-fx-background-color: #BA0C2F;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-pref-width: 160;" />

            <Button fx:id="logoutBtn"
                    text="Logout"
                    onAction="#handleLogout"
                    style="-fx-background-color: #BA0C2F;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-pref-width: 160;" />
        </VBox>
    </left>

    <!-- Center area: Views get loaded here dynamically -->
    <center>
        <!-- The center area will be replaced by loaded FXML views -->
    </center>

</BorderPane>

